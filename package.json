{
  "name": "react-native-ble-mesh",
  "version": "1.0.4",
  "description": "React Native Bluetooth Low Energy (BLE) mesh networking library with end-to-end encryption, offline messaging, peer-to-peer communication, and Noise Protocol security for iOS and Android",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "require": "./src/index.js",
      "default": "./src/index.js"
    },
    "./adapters": {
      "require": "./src/transport/adapters/index.js",
      "default": "./src/transport/adapters/index.js"
    },
    "./crypto": {
      "require": "./src/crypto/index.js",
      "default": "./src/crypto/index.js"
    },
    "./utils": {
      "require": "./src/utils/index.js",
      "default": "./src/utils/index.js"
    },
    "./hooks": {
      "require": "./src/hooks/index.js",
      "default": "./src/hooks/index.js"
    }
  },
  "sideEffects": false,
  "react-native": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm test"
  },
  "keywords": [
    "react-native",
    "react-native-ble",
    "react-native-bluetooth",
    "bluetooth",
    "bluetooth-low-energy",
    "ble",
    "ble-mesh",
    "mesh-network",
    "mesh-networking",
    "p2p",
    "peer-to-peer",
    "offline",
    "offline-first",
    "offline-messaging",
    "encryption",
    "end-to-end-encryption",
    "e2e-encryption",
    "noise-protocol",
    "secure-messaging",
    "ios",
    "android",
    "mobile",
    "wireless",
    "decentralized",
    "chat",
    "messaging"
  ],
  "author": {
    "name": "Suhail Taj Shaik",
    "url": "https://github.com/suhailtajshaik"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react-native": ">=0.60.0",
    "react-native-get-random-values": ">=1.8.0",
    "react-native-ble-plx": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-ble-plx": {
      "optional": true
    }
  },
  "files": [
    "src",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suhailtajshaik/react-native-ble-mesh.git"
  },
  "bugs": {
    "url": "https://github.com/suhailtajshaik/react-native-ble-mesh/issues"
  },
  "homepage": "https://github.com/suhailtajshaik/react-native-ble-mesh#readme"
}
